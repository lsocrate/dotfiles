[alias]
  abort-merge = reset --hard HEAD
  amend = commit --amend
  br = branch
  ci = commit
  co = checkout
  cp = cherry-pick
  dump = cat-file -p
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  st = status
