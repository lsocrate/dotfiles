alias nv=nvim
alias mux=tmuxinator

function refresh-mirrors() {
  sudo reflector --verbose --country "$1" -l 15 --sort rate --save /etc/pacman.d/mirrorlist
}

wifi-strength() {
  watch -n 1 "awk 'NR==3 {print \"Signal strength = \" \$3 \"00 %\"}''' /proc/net/wireless"
}

function pre-vbox() {
  sudo modprobe vboxdrv
  sudo modprobe vboxnetadp
  sudo modprobe vboxnetflt
  sudo modprobe vboxpci
}

function my-ip() {
  dig +short myip.opendns.com @resolver1.opendns.com
}

function clean-steam-libs() {
  find ~/.steam/root/ \( -name "libgcc_s.so*" -o -name "libstdc++.so*" -o -name "libxcb.so*" -o -name "libgpg-error.so*" \) -print -delete
  find ~/.local/share/Steam/ \( -name "libgcc_s.so*" -o -name "libstdc++.so*" -o -name "libxcb.so*" -o -name "libgpg-error.so*" \) -print -delete
}

function mastercard-exchange() {
  local TODAY=$(date +'%m/%d/%Y')
  http -f POST https://www.mastercard.com/psder/eu/callPsder.do service="getExchngRateDetails" baseCurrency="USD" settlementDate="$TODAY" | grep -oP "<TRANSACTION_CURRENCY_DTL><ALPHA_CURENCY_CODE>$1.*?</TRANSACTION_CURRENCY_DTL>" | grep -oP "[0-9.]+"
}
