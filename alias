alias nv=nvim
alias mux=tmuxinator
alias pg-start=pg_ctl -D /usr/local/var/postgres start
alias https='http --default-scheme=https --verify no'

function refresh-mirrors() {
  sudo reflector --verbose --country "$1" -l 15 --sort rate --save /etc/pacman.d/mirrorlist
}

wifi-strength() {
  watch -n 1 "awk 'NR==3 {print \"Signal strength = \" \$3 \"00 %\"}''' /proc/net/wireless"
}

function pre-vbox() {
  sudo modprobe vboxdrv
  sudo modprobe vboxnetadp
  sudo modprobe vboxnetflt
  sudo modprobe vboxpci
}

function my-ip() {
  dig +short myip.opendns.com @resolver1.opendns.com
}

function clean-neo4j-db() {
  sudo systemctl stop neo4j.service
  sudo rm -rf /var/lib/neo4j/data/databases/graph.db
  sudo systemctl start neo4j.service
}
